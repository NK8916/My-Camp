<% include ../partials/header %>

<div class="row">
    <div class="col-md-6">
        <h1 class="mb-4 text-center"><%=user.firstname + " " + user.lastname%></h1>
      <div class="text-center">
           <a href="/follow/<%= user.id %>"><button class="btn btn-lg btn-primary">Follow <%= user.username %></button></a>
          
      </div>
      
        
    </div>
    
    <div class="col-md-6">
        <h3><%=user.username%>'s campgrounds</h3>
        <ul>
     <%   campgrounds.forEach(function(campground){ %>
         
        <li><a href="/campgrounds/<%=campground.id%>"><%=campground.name%></a></li>
        
    <%    }); %>     
        </ul>
       
    </div>
    
</div>

<% include ../partials/footer %>